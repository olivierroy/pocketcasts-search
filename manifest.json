{
  "manifest_version": 3,
  "name": "YouTube to Pocketcasts",
  "version": "1.0",
  "description": "Search Pocketcasts for podcasts from YouTube videos",
  "permissions": [
    "activeTab",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "*://www.youtube.com/*",
    "*://pocketcasts.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["utils.js", "content.js"],
      "css": ["content.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Search in Pocketcasts"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}