{
  "manifest_version": 3,
  "name": "Pocket Casts Search",
  "version": "1.2",
  "description": "Search Pocket Casts for podcasts from webpages with audio players and podcast content",
  "permissions": [
    "activeTab",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "*://*/*",
    "*://pocketcasts.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Search in Pocket Casts"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
